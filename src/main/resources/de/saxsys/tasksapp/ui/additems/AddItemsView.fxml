<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<HBox styleClass="add_item_root" fx:controller="de.saxsys.tasksapp.ui.additems.AddItemsView"
	  alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<CheckBox fx:id="selectAll" mnemonicParsing="false"/>
		<TextField fx:id="addInput" promptText="What needs to be done?" HBox.hgrow="ALWAYS"/>
	</children>
	<stylesheets>
		<URL value="@additems.css"/>
	</stylesheets>
</HBox>
